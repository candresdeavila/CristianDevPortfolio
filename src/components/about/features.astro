---
import ServiceCard from "./ServiceCard.astro";
import { FaLaptopCode, FaBolt, FaRocket } from "react-icons/fa"; 
---

<section class="site-container mt-14 mx-auto max-w-5xl px-4">
	<h2
		class="text-4xl font-bold flex flex-col items-center gap-6 text-center whitespace-nowrap text-white md:flex-row md:items-center md:text-end"
	>
		<span class="hidden h-1.5 grow rounded-lg drop-shadow-[2px_2px_0_#0debd8] bg-[#7836cf] md:block"></span>
		<span class="drop-shadow-[2px_2px_0_#7836cf]">Services</span>
	</h2>

	<div class="mt-10 grid gap-8 md:grid-cols-2 lg:grid-cols-2 max-w-3xl mx-auto">
		<ServiceCard
			icon={FaLaptopCode}
			title="Responsive Web Development"
			description="Building modern, mobile-friendly websites optimized for performance and accessibility."
		/>
		<ServiceCard
			icon={FaBolt}
			title="Frontend"
			description="Creating dynamic and interactive user interfaces with a focus on user experience and design principles."
		/>
        <!-- 
		<ServiceCard
			icon={FaRocket}
			title="Backend"
			description="Developing robust server-side applications and APIs to support web and mobile applications."
		/> -->
	</div>
</section>
